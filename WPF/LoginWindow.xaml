<Window x:Class="WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="500" Width="800"
        FontSize="20"
        FontFamily="Mono"
        FontWeight="Bold"
        WindowStartupLocation="CenterScreen">

    <Border Background="White" 
            CornerRadius="15">
        <Grid>
            <!-- Left Side - Image Section -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Background Image Section -->
            <Border Grid.Column="0" 
                    CornerRadius="15,0,0,15" 
                    Background="#F0F4F8">
                <StackPanel VerticalAlignment="Center" 
                            HorizontalAlignment="Center">
                    <TextBlock Text="Vaccination Management" 
                               FontSize="22" 
                               Foreground="#2C3E50" 
                               FontWeight="SemiBold" 
                               HorizontalAlignment="Center" 
                               Margin="0,20,0,10"/>
                    <TextBlock Text="Secure and Efficient Healthcare Tracking" 
                               FontSize="14" 
                               Foreground="#7F8C8D" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Login Form Section -->
            <Grid Grid.Column="1" 
                  Margin="40,40,21,40">
                <StackPanel VerticalAlignment="Center">
                    <!-- Login Header -->
                    <TextBlock Text="Welcome Back" 
                               FontSize="28" 
                               Foreground="#2C3E50" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20"/>

                    <!-- Email Input -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Email:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,10,10,10"/>
                        <TextBox x:Name="txtEmail" 
                                 Grid.Column="1" 
                                 Margin="37,10,0,10"
                                 FontSize="16">
                            <TextBox.Text>
                                <Binding Path="Email" 
                                         UpdateSourceTrigger="PropertyChanged"/>
                            </TextBox.Text>
                        </TextBox>
                    </Grid>

                    <!-- Password Input -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Password:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,10,10,10"/>
                        <PasswordBox x:Name="txtPassword" 
                                     Grid.Column="1" 
                                     Margin="0,10"
                                     FontSize="16"/>
                    </Grid>

                    <!-- Login Button -->
                    <Button x:Name="btnLogin" 
                            Content="LOGIN" 
                            Click="btnLogin_Click"
                            Background="#2ECC71"
                            Foreground="White"
                            Height="50"
                            Margin="0,20"
                            FontSize="16"
                            Width="250"/>

                    <!-- Register Link -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,20,0,0">
                        <TextBlock Text="Don't have an account? " 
                                   Foreground="#34495E"/>
                        <Button x:Name="btnRes" Content="Register" 
                                Cursor="Hand"
                                Background="White"
                                Foreground="#2ECC71"
                                Width="100" Click="btnRes_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>